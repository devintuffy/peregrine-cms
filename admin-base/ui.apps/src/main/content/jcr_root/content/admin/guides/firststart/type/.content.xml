<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
          jcr:primaryType="per:Page"
>
    <jcr:content
            jcr:primaryType="per:PageContent"
            sling:resourceType="admin/components/toolingpage"
            jcr:title="Project Type"
            jcr:description="admin base Content Root"
            siteCSS="[/etc/felibs/admin/dependencies/material-design-icons/material-icons.css,/etc/felibs/materialize/materialize.css]"
            siteJS="[/etc/felibs/admin/dependencies/jquery/jquery.js,/etc/felibs/admin/dependencies/materialize-css/js/materialize.min.js]"
    >
        <nav jcr:primaryType="nt:unstructured"
             sling:resourceType="admin/components/nav"/>

        <content jcr:primaryType="nt:unstructured"
                 sling:resourceType="pagerender/vue/structure/container">

            <row jcr:primaryType="nt:unstructured"
                 sling:resourceType="admin/components/row">

                <col1 jcr:primaryType="nt:unstructured"
                      sling:resourceType="admin/components/col"
                      classes="col"
                >

                    <text jcr:primaryType="nt:unstructured"
                           sling:resourceType="pagerender/vue/components/base"
                           text="&lt;h3&gt;Tell me about the type of Project&lt;/h3&gt;Choose one of the project types below so we can get on our way.">
                        <experiences jcr:primaryType="nt:unstructured"/>
                    </text>

                    <simplesite jcr:primaryType="nt:unstructured"
                            sling:resourceType="admin/components/iconaction" action="/content/admin/guides/firststart/simple" jcr:title="simple site, static content"
                            jcr:description="Use one of our base themes to create a site, no coding required"/>

                    <customsite jcr:primaryType="nt:unstructured"
                                sling:resourceType="admin/components/iconaction" action="/content/admin/guides/firststart/custom" jcr:title="custom site, static content"
                                jcr:description="Write your own components and maintain your code in a git repository"/>

                    <fullstack jcr:primaryType="nt:unstructured"
                                sling:resourceType="admin/components/iconaction" action="/content/admin/guides/firststart/custom" jcr:title="custom site, dynamic content"
                                jcr:description="use an author and publish environment and write a real application with peregrine-cms"/>

                    <admin jcr:primaryType="nt:unstructured"
                                sling:resourceType="admin/components/iconaction" action="/content/admin/guides/firststart/custom" jcr:title="enhance peregrine"
                                jcr:description="Work on enhancing peregrine-cms"/>

                </col1>
            </row>
        </content>

        <jsonview jcr:primaryType="nt:unstructured"
                  sling:resourceType="admin/components/debugger" dataFrom="/"/>

    </jcr:content>
</jcr:root>
